<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course.mapper.SchoolMapper">
<resultMap id="SchoolResultMap" type="School">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="province" property="province" />
        <result column="city" property="city" />
    </resultMap>

    <select id="findAllSchools" resultMap="SchoolResultMap">
        select id, name, province,city from schools
    </select>

    <select id="findSchoolById" resultMap="SchoolResultMap">
        select id, name, province,city from schools WHERE id=#{id}
    </select>

    <insert id="insertSchool" parameterType="School" useGeneratedKeys="true" keyProperty="id">
        insert into schools(name,province,city) values(#{name},#{province},#{city})
    </insert>
</mapper>